{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CommonHeaderDefinitions",
  "properties": {
    "version": {
      "type": "integer",
      "description": "Version",
      "bitLength": 8
    },
    "magic": {
      "type": "integer",
      "description": "Magic number",
      "bitLength": 56
    },
    "length": {
      "type": "integer",
      "description": "Length (in bytes)",
      "bitLength": 32
    },
    "headerLength": {
      "type": "integer",
      "description": "Header length (in bytes)",
      "bitLength": 16
    },
    "type": {
      "type": "integer",
      "description": "Type",
      "bitLength": 16
    }
  }
}
